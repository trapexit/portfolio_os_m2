# @(#)Makefile 95/07/20 1.4

HINCDIRS =	${CODEMGR_WS}/ws_root/src/includes

include ${CODEMGR_WS}/ws_root/variables/hostexecs
include ${CODEMGR_WS}/ws_root/rules/hostexecs

HOSTCCOPTIONS += -I-

BUILDTREE =	buildtree
BUILDTREE_SRC =	${BUILDTREE}
BUILDTREE_BIN =	${HOSTOSBIN}/${BUILDTREE}

FSBUILD =	fsbuild
FSBUILD_SRC =	${FSBUILD}
FSBUILD_BIN =	${HOSTOSBIN}/${FSBUILD}

TREESIZE =	treesize
TREESIZE_SRC =	${TREESIZE}
TREESIZE_BIN =	${HOSTOSBIN}/${TREESIZE}

SUPPORT_FILES =	${BUILDTREE_BIN} ${FSBUILD_BIN} ${TREESIZE_BIN}

all.post: ${TARGET} ${SUPPORT_FILES}

${BUILDTREE_BIN}: ${BUILDTREE_SRC}
	${CP} ${BUILDTREE_SRC} ${BUILDTREE_BIN}
	${CHMOD} 777 ${BUILDTREE_BIN}

${FSBUILD_BIN}: ${FSBUILD_SRC}
	${CP} ${FSBUILD_SRC} ${FSBUILD_BIN}
	${CHMOD} 777 ${FSBUILD_BIN}

${TREESIZE_BIN}: ${TREESIZE_SRC}
	${CP} ${TREESIZE_SRC} ${TREESIZE_BIN}
	${CHMOD} 777 ${TREESIZE_BIN}

clean.post:
	${RM} ${SUPPORT_FILES}

